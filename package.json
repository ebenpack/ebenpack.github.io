{
    "name": "site",
    "version": "0.0.1",
    "description": "Package for site scripts",
    "main": "js/main.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ebenpack/ebenpack.github.io.git"
    },
    "scripts": {
        "build-js": "if [ -d \"_site/js\" ]; then rm -r _site/js; fi && mkdir _site/js && npx webpack && npm run build-mathjax",
        "build-mathjax": "cp js/MathJax.js _site/js && cp -r js/config js/extensions js/fonts js/jax js/localization _site/js",
        "minify-css": "if [ -d \"_site/css\" ]; then rm -r _site/css; fi && postcss ./assets/css/ --dir ./_site/css/ --use autoprefixer --use cssnano --no-map",
        "minify-js": "google-closure-compiler  --js=_site/js/bundle.js --js_output_file=_site/js/bundle.min.js --strict_mode_input=false && cp _site/js/bundle.min.js _site/js/bundle.js && rm _site/js/bundle.min.js",
        "build:prod": "npm run build-js && npm run minify-css && npm run minify-js"
    },
    "author": "ebenpack",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^9.7.5",
        "cssnano": "^4.1.10",
        "google-closure-compiler": "^20200204.0.0",
        "postcss-cli": "^7.1.0",
        "@babel/core": "^7.10.2",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/preset-env": "^7.10.2",
        "babel-loader": "^8.1.0",
        "regenerator-runtime": "^0.13.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "@codemirror/basic-setup": "^0.19.0",
        "@codemirror/commands": "^0.19.5",
        "@codemirror/gutter": "^0.19.5",
        "@codemirror/lang-javascript": "^0.19.3",
        "@codemirror/legacy-modes": "^0.19.0",
        "@codemirror/stream-parser": "^0.19.2",
        "codemirror": "^5.64.0",
        "astar": "git+https://github.com/ebenpack/astar.git#master",
        "boltzmann": "git+https://github.com/ebenpack/lattice-boltzmann.js.git#master",
        "conway": "git+https://github.com/ebenpack/conway.js.git#master",
        "lidrisp": "git+https://github.com/ebenpack/lidrisp.git#build",
        "lispish.js": "git+https://github.com/ebenpack/lispish.js.git#master",
        "projectwavybits": "git+https://github.com/ebenpack/projectwavybits.js.git#master",
        "scheme.rs": "git+https://github.com/ebenpack/scheme-rs.git#build",
        "videoascii": "git+https://github.com/ebenpack/videoascii.js.git#master",
        "vu": "git+https://github.com/ebenpack/vu.js.git#master",
        "wireframe.js": "git+https://github.com/ebenpack/wireframe.js.git#master"
    }
}
