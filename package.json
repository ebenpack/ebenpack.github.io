{
    "name": "site",
    "version": "0.0.1",
    "description": "Package for site scripts",
    "main": "js/main.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ebenpack/ebenpack.github.io.git"
    },
    "scripts": {
        "build-js": "browserify js/main.js --standalone main > assets/js/bundle.js",
        "minify-css": "postcss _site/css/default.css > _site/css/default.min.css && postcss _site/css/normalize.css > _site/css/normalize.min.css && postcss _site/css/syntax.css > _site/css/syntax.min.css && postcss _site/css/theme.css > _site/css/theme.min.css && cp _site/css/default.min.css _site/css/default.css && cp _site/css/normalize.min.css _site/css/normalize.css && cp _site/css/syntax.min.css _site/css/syntax.css && cp _site/css/theme.min.css _site/css/theme.css && rm _site/css/default.min.css _site/css/normalize.min.css _site/css/syntax.min.css _site/css/theme.min.css # lol",
        "minify-js": "google-closure-compiler  --js=_site/js/bundle.js --js_output_file=_site/js/bundle.min.js --strict_mode_input=false && cp _site/js/bundle.min.js _site/js/bundle.js && rm _site/js/bundle.min.js"
    },
    "author": "ebenpack",
    "license": "MIT",
    "devDependencies": {
        "browserify": "^16.1.0",
        "cssnano": "^4.1.10",
        "google-closure-compiler": "^20200204.0.0",
        "postcss-cli": "^7.1.0"
    },
    "dependencies": {
        "astar": "git://github.com/ebenpack/astar#master",
        "boltzmann": "git://github.com/ebenpack/lattice-boltzmann.js#master",
        "conway": "git://github.com/ebenpack/conway.js#master",
        "lidrisp": "git://github.com/ebenpack/lidrisp.git#build",
        "lispish.js": "git://github.com/ebenpack/lispish.js.git#master",
        "projectwavybits": "git://github.com/ebenpack/projectwavybits.js#master",
        "videoascii": "git://github.com/ebenpack/videoascii.js#master",
        "vu": "git://github.com/ebenpack/vu.js#master",
        "wireframe": "git://github.com/ebenpack/wireframe.js#master"
    }
}
